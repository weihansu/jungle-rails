<h2>Jungle Order's Receipt</h1>

<p>
  <%= @order.email %>, here is your receipt for order ID <%= @order.id %>
</p>

<table>
  <thead>
    <tr>
    <th>Product</th>
    <th>Unit Price</th>
    <th>Quantity</th>
    <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @enhanced_cart.each do |line| %>
      <tr>
        <td>
          <%= image_tag line[:product].image.tiny %>
        </td>
        <td>
          <h4><%= line[:product].name %></h4>
        </td>
        <td>
          <%= humanized_money_with_symbol line[:product].price %>
        </td>
        <td>
          <%= line[:quantity] %>
        </td>
        <td>
          <%= humanized_money_with_symbol line[:product].price * line[:quantity] %>
        </td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <th colspan="4">
        TOTAL:
      </th>
      <th>
        <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
      </th>
    </tr>
  </tfoot>
</table>