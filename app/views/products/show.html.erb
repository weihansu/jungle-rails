<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <%= form_for @product, :url => product_ratings_path(@product, @rating), method: :post do |f| %>
      <div>
        <%= f.label :rating%>
        <%= f.select :rating, options_for_select([["Select One", ""], 0, 1, 2, 3, 4, 5]) %>
      </div>
      <div>
        <%= f.label :description %>
        <%= f.text_area :description, :value => nil%>
      </div>
      <div class="form-row col-md-12 float-right">
        <%= f.submit 'Sign Up', class: 'btn btn-info btn-submit'%>
      </div>
    <%end%>

    <div class="row">
      <% @product.rating.order('created_at DESC').each do |rating| %>
        <%= render "rating", rating: rating %>
      <% end %>

    </div>

  </article>

</section>
